{
  "compilerOptions": {
    /* Основні налаштування */
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom", "dom.iterable"],
    "jsx": "react",

    /* Суворість та взаємодія з модулями */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Як вирішувати модулі */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Куди компілювати (зазвичай цим займається Webpack/Babel) */
    "noEmit": true
  },
  "include": [
    "src" // Переконайтеся, що ваш код знаходиться в папці "src"
  ]
}