{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",

    "rootDir": "..",
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },

    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
